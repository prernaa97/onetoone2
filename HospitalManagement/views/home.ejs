<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Patient Records</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Hospital Patient Records</h2>
        <button style="background-color:black; border-radius: 5px; margin: 5px;"><a href="addPatient" style="text-decoration: none;text-align: center; color: white;">Add New..</a></button>
        <form action="/" method="get">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped align-middle shadow-sm">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Admit Date</th>
                            <th>Blood Group</th>
                            <th>Allergies</th>
                            <th>Diagnosis</th>
                            <th>Prescription</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <% pateints.forEach(x => { %>
                            <tr>
                                <td><%= x.name %></td>
                                <td><%= x.age %></td>
                                <td><%= x.gender %></td>
                                <td><%= x.addmitDate %></td>
                                <td><%= x.Record?.bloodGroup || 'N/A' %></td>
                                <td><%= x.Record?.allergies || 'N/A' %></td>
                                <td><%= x.Record?.diagnosis || 'N/A' %></td>
                                <td><%= x.Record?.prescription || 'N/A' %></td>
                                <td><button><a href="/update/<%= x.id %>" style="text-decoration: none;">Edit</a></button>
                                <button><a href="/delete/<%= x.id %>" style="text-decoration: none;">Deleete</a></button></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS (optional, for dropdowns/modal if needed) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
